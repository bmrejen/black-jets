<%= simple_form_for flights_path, method: :get do |f| %>
<%= f.input :origin %>
<%= f.input :destination %>

<%= f.input :departure, as: :date %>
<%= f.submit %>
<% end %>






  <% @flights.each do |flight| %>
    <div>
      <h1><%= flight.jet.plane_model %></h1>
      <h2><%= flight.departure %></h2>
      <h2><%= flight.price %></h2>
      <%= link_to "book", flight_path(flight) %>
    </div>
  <% end %>

